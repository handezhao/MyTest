<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <TextView
        android:id="@+id/tv_touch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/selector_button_default"
        android:padding="10dp"
        android:text="TOTOUCH"
        android:textColor="#454545"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_button_default"
        android:padding="10dp"
        android:text="ANIMATION"
        android:textColor="#454545"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/tv_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_button_default"
        android:padding="10dp"
        android:text="Position"
        android:textColor="#454545"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/tv_sin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_button_default"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="sin"
        android:textColor="#454545"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/tv_bezier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_button_default"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="bezier"
        android:textColor="#454545"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/tv_bezier_animator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_button_default"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="bezierAnima"
        android:textColor="#454545"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/tv_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_button_default"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="heart"
        android:textColor="#454545"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/tv_crazy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/selector_button_default"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="crazy"
        android:textColor="#454545"
        android:layout_gravity="center_horizontal"
        android:textSize="18sp" />

</LinearLayout>